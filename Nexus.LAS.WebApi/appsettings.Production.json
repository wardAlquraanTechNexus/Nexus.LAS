{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error",
      "Microsoft.Hosting.Lifetime": "Information",
      "Nexus.LAS": "Information"
    }
  },
  "AllowedHosts": "*.nexuslas.com;nexuslas.com",
  
  "ConnectionStrings": {
    "NexusLASConnectionString": "#{Database_ConnectionString}#"
  },

  "JwtSettings": {
    "Key": "#{JWT_SecretKey}#",
    "Issuer": "#{JWT_Issuer}#",
    "Audience": "#{JWT_Audience}#",
    "DurationInMinutes": 60
  },

  "EmailSettings": {
    "ApiKey": "#{SendGrid_ApiKey}#",
    "FromAddress": "#{Email_FromAddress}#",
    "FromName": "#{Email_FromName}#"
  },

  "FileStorageSettings": {
    "ConnectionString": "#{FileStorage_ConnectionString}#",
    "MaxFileSize": "#{FileStorage_MaxFileSize}#",
    "ProfilePicturesContainer": "#{FileStorage_ProfilePicturesContainer}#",
    "ProfilePicturesFolder": "#{FileStorage_ProfilePicturesFolder}#"
  },

  "HostSettings": {
    "Host": "#{Host_BaseUrl}#",
    "ConfirmationURL": "#{Host_ConfirmationURL}#",
    "ResetPasswordURL": "#{Host_ResetPasswordURL}#",
    "CompanyDomain": "#{Company_Domain}#",
    "CompanyName": "#{Company_Name}#",
    "CompanyLogo": "#{Company_LogoUrl}#",
    "AppEmail": "#{Company_AppEmail}#"
  },

  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": 31536000,
    "AllowedOrigins": [
      "#{CORS_AllowedOrigin_1}#",
      "#{CORS_AllowedOrigin_2}#"
    ]
  },

  "HealthChecks": {
    "DatabaseTimeoutSeconds": 30,
    "MemoryThresholdMB": 512,
    "DiskSpaceThresholdGB": 1
  },

  "Performance": {
    "CacheDurationMinutes": 30,
    "MaxRequestSizeMB": 50,
    "RequestTimeoutSeconds": 300,
    "EnableResponseCompression": true
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Nexus.LAS": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/nexus-las/nexus-las-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}",
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/nexus-las/errors/nexus-las-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj} {Properties:j}{NewLine}{Exception}",
          "fileSizeLimitBytes": 52428800,
          "rollOnFileSizeLimit": true,
          "restrictedToMinimumLevel": "Error"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "Nexus.LAS.WebApi",
      "Environment": "Production"
    }
  }
}